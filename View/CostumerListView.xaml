<UserControl x:Class="FurnitureStoreApp.View.CostumerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FurnitureStoreApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="800">
    <Grid Margin="100,0,100,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Customer's List"
                   Grid.Column="1"
                   Grid.Row="0"
                   Style="{StaticResource fontStyle}"/>
        <DataGrid x:Name="dtGrd"
                  AutoGenerateColumns="False"
                  Grid.Row="1"
                  Grid.Column="1" 
                  Margin="5,8" 
                  Padding="3"
                  Foreground="#5DBEBE"
                  Background="Transparent"
                  
                  ItemsSource="{Binding Path=Customers, Mode=TwoWay}">
                <DataGrid.Columns>
                <DataGridTextColumn Header="Name" 
                                    Width="auto"
                                    Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Date and time" 
                                    Width="auto"
                                    Binding="{Binding Path=Date}" />
                <DataGridTextColumn Header="Purchase ID" 
                                    Width="auto"
                                    Binding="{Binding Path=PurchaseID}" />
                <DataGridTextColumn Header="Full price"
                                    Width="auto"
                                    Binding="{Binding Path=FullPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding Path=deleteCustomerCommand}" 
                Height="20" 
                Width="150" 
                HorizontalAlignment="Left" 
                Content="Delete Customer"
                Grid.Column="1"
                Grid.Row="2"
                Foreground="#5DBEBE"/>
        <Button Command="{Binding Path=searchCustomerCommand}" 
                Height="20" 
                Width="150" 
                HorizontalAlignment="Right" 
                Content="Search/Pdf Customer"
                Grid.Column="1"
                Grid.Row="2"
                Foreground="#5DBEBE"/>
        <TextBox Width="100" 
                 HorizontalAlignment="Center" 
                 Text="{Binding Path=currentCustomer.PurchaseID, Mode=TwoWay}"
                 Grid.Column="1"
                 Grid.Row="3"></TextBox>
        
      
    </Grid>
</UserControl>
